pipeline {
  agent any
  stages {
    stage('Hello') {
       steps {
           script {
               if (env.currentBuild.result == 'SUCCESS') 
                   {
                    echo 'currentBuild is pass'
               }
               else {
                  sh " echo 'currentBuild from ${env.currentBuild.result} failure!'"
}
   }
     }
           }
              }
}
