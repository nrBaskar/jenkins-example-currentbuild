pipeline {
  agent any
  stages {
    stage('Hello') {
       steps {
           script {
               if (env.currentBuild.result == 'SUCCESS') 
                   {
                    echo 'Hello from currentBuild is pass'
               }
               else {
                  sh " echo 'Hello from currentBuild from ${env.currentBuild.result}'"
}
   }
     }
           }
              }
}
